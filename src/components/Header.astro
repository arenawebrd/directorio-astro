---
import ThemeToggle from './ThemeToggle.astro';
---
<header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50 dark:bg-gray-800">
  <div class="container mx-auto max-w-6xl h-16 flex items-center justify-between px-4">
    <a href="/" class="flex items-center text-gray-700 hover:text-gray-900 dark:text-gray-200">
      <span class="material-symbols-outlined text-2xl text-blue-600">map</span>
      <span class="text-xl font-semibold ml-2">Directorio</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-6">
      <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Inicio</a>
      <a href="/provinces" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Provincias</a>
      <a href="/map" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Mapa</a>
      <a href="/blog" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Blog</a>
      <a href="/contact" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Contacto</a>
      <ThemeToggle />
    </nav>

    <!-- Mobile Hamburger Button -->
    <div class="md:hidden flex items-center">
        <ThemeToggle />
        <button id="menu-btn" class="ml-4 p-2 focus:outline-none">
            <span class="hamburger-line top"></span>
            <span class="hamburger-line middle"></span>
            <span class="hamburger-line bottom"></span>
        </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-16 left-0 w-full bg-white dark:bg-gray-800">
    <nav class="flex flex-col items-center text-center">
      <a href="/" class="w-full py-4 text-lg text-gray-700 dark:text-gray-200 border-b border-gray-200 dark:border-gray-700">Inicio</a>
      <a href="/provinces" class="w-full py-4 text-lg text-gray-700 dark:text-gray-200 border-b border-gray-200 dark:border-gray-700">Provincias</a>
      <a href="/map" class="w-full py-4 text-lg text-gray-700 dark:text-gray-200 border-b border-gray-200 dark:border-gray-700">Mapa</a>
      <a href="/blog" class="w-full py-4 text-lg text-gray-700 dark:text-gray-200 border-b border-gray-200 dark:border-gray-700">Blog</a>
      <a href="/contact" class="w-full py-4 text-lg text-gray-700 dark:text-gray-200">Contacto</a>
    </nav>
  </div>
</header>

<style>
  .hamburger-line {
    display: block;
    width: 24px;
    height: 2px;
    background-color: #374151; /* gray-700 */
    margin: 5px 0;
    transition: all 0.3s ease-in-out;
  }
  .dark .hamburger-line {
    background-color: #d1d5db; /* gray-300 */
  }
  #menu-btn.open .hamburger-line.top {
    transform: rotate(45deg) translate(5px, 5px);
  }
  #menu-btn.open .hamburger-line.middle {
    opacity: 0;
  }
  #menu-btn.open .hamburger-line.bottom {
    transform: rotate(-45deg) translate(5px, -5px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuBtn && mobileMenu) {
      menuBtn.addEventListener('click', () => {
        menuBtn.classList.toggle('open');
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
