---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Layout title="Nuestro Blog">
  <div class="container mx-auto max-w-6xl px-4 py-8">
    <nav class="mb-6 flex items-center text-sm text-gray-600">
      <a href="/" class="text-blue-600 hover:underline">Inicio</a>
      <span class="mx-2">></span>
      <span>Blog</span>
    </nav>
    <h1 class="text-3xl font-bold mb-6">Nuestro Blog</h1>
    <ul class="space-y-6">
      {posts.map(post => (
        <li class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <a href={`/blog/${post.slug}/`} class="block">
            <h2 class="text-2xl font-semibold text-blue-600 dark:text-blue-400 hover:underline">{post.data.title}</h2>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">
              Publicado el {post.data.pubDate.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })} por {post.data.author}
            </p>
            <p class="text-gray-700 dark:text-gray-300 mt-2">{post.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
